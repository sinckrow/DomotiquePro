<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android           ="http://schemas.android.com/apk/res/android"
    xmlns:app               ="http://schemas.android.com/apk/res-auto"
    xmlns:tools             ="http://schemas.android.com/tools"
    tools:context           ="l3pro20162017.domotiquepro.ActivityAccueil"
    android:id              ="@+id/activity_accueil"
    android:orientation     ="vertical"
    android:layout_width    ="match_parent"
    android:layout_height   ="match_parent"
    android:textColor       ="#fff"
    android:background      ="#434343"
    android:padding         ="20dp">

    <TextView
        android:id                      ="@+id/activity_accueil_nom_appli"
        android:layout_width            ="wrap_content"
        android:layout_height           ="wrap_content"
        android:layout_alignParentTop   ="true"
        android:layout_centerHorizontal ="true"
        android:layout_gravity          ="center"
        android:text                    ="Accueil"
        android:textSize                ="45sp"
        android:textColor               ="#fff"/>

    <RelativeLayout
        android:id                      ="@+id/relativeLayout"
        android:layout_width            ="320dp"
        android:layout_height           ="200dp"
        android:layout_below            ="@+id/activity_accueil_nom_appli"
        android:layout_centerHorizontal ="true"
        android:layout_marginTop        ="50dp"
        android:orientation             ="vertical">

        <Button
            android:id                      ="@+id/activity_accueil_btn_action"
            android:layout_width            ="150dp"
            android:layout_height           ="90dp"
            android:layout_alignParentStart ="true"
            android:layout_alignParentTop   ="true"
            android:background              ="@drawable/btn_bg_00"
            android:text                    ="Actions"
            android:textAllCaps             ="true"
            android:textColor               ="#d2d2d2"
            android:textSize                ="13sp"
            android:textStyle               ="bold"/>

        <Button
            android:id                      ="@+id/activity_accueil_btn_options"
            android:layout_width            ="150dp"
            android:layout_height           ="90dp"
            android:layout_alignParentEnd   ="true"
            android:layout_alignParentTop   ="true"
            android:background              ="@drawable/btn_bg_00"
            android:text                    ="Paramètres"
            android:textAllCaps             ="true"
            android:textColor               ="#d2d2d2"
            android:textSize                ="13sp"
            android:textStyle               ="bold"/>

        <Button
            android:id                          ="@+id/activity_accueil_btn_historique"
            android:layout_width                ="150dp"
            android:layout_height               ="90dp"
            android:layout_alignParentBottom    ="true"
            android:layout_alignParentStart     ="true"
            android:background                  ="@drawable/btn_bg_00"
            android:text                        ="Historique"
            android:textAllCaps                 ="true"
            android:textColor                   ="#d2d2d2"
            android:textSize                    ="13sp"
            android:textStyle                   ="bold"/>

        <Button
            android:id                          ="@+id/activity_accueil_btn_pswd"
            android:layout_width                ="150dp"
            android:layout_height               ="90dp"
            android:layout_alignParentBottom    ="true"
            android:layout_alignParentEnd       ="true"
            android:background                  ="@drawable/btn_bg_00"
            android:text                        ="Sécurité"
            android:textAllCaps                 ="true"
            android:textColor                   ="#d2d2d2"
            android:textSize                    ="13sp"
            android:textStyle                   ="bold"/>

    </RelativeLayout>
</RelativeLayout>
